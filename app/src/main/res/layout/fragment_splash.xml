<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/fragment_splash_text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_splash_state_in_progress"/>

        <ProgressBar
            android:id="@+id/fragment_splash_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/fragment_splash_button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_margin="32dp"
        android:text="@string/fragment_splash_button_retry"
        android:visibility="invisible"/>

</FrameLayout>